<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600;700&family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'application.css' | asset_url | stylesheet_tag }}
</head>
<body class="template-{{ template }}">

  {% include 'header' %}

  {% if template != 'cart' %}
    {% include 'mini-cart' %}
  {% endif %}

  <main role="main">
    {{ content_for_layout }}

    {% include 'footer' %}
  </main>

  <div id="no-click"></div>


  {{ "jquery-3.3.1.min.js" | asset_url | script_tag }}

  {% if settings.show_multiple_currencies %}
    {{ "//cdn.shopify.com/s/javascripts/currencies.js" | script_tag }}
    {{ "jquery.currencies.min.js" | asset_url | script_tag }}
  {% endif %}

  {% include 'currencies' %}
  {{ 'slick.min.js' | asset_url | script_tag }}
  {{ 'application.js' | asset_url | script_tag }}
</body>
</html>
